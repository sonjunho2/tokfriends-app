{
  "expo": {
    "name": "딱친",
    "slug": "ddakchin",
    "owner": "sonfree",
    "scheme": "ddakchin",
    "version": "1.0.0",
    "orientation": "portrait",
    "assetBundlePatterns": ["**/*"],
    "icon": "./assets/logo.png",
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "android": {
      "package": "com.sonfree.ddakchin",
      "versionCode": 1,                     // ✅ 추가: 최초 1, 업데이트 때마다 +1
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#111827"
      },
      "permissions": [
        "INTERNET"                          // 기본 인터넷 통신      
        "CAMERA",
        "READ_MEDIA_IMAGES",
        "READ_MEDIA_VIDEO"
        
      ]
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sonfree.ddakchin",
      "buildNumber": "1"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      ["expo-build-properties", {           // ✅ 빌드 타겟 명시 (안정성↑)
        "android": { "compileSdkVersion": 34, "targetSdkVersion": 34, "minSdkVersion": 24 }
      }]
    ],
    "extra": {
      "apiBaseUrl": "https://tok-friends-api.onrender.com",
      "eas": { "projectId": "101718db-f90c-4fc8-9b2f-ed06405d9991" }
    }
  }
}
